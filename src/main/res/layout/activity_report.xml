<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray9"
    tools:context=".project.Report" >

    <include layout="@layout/basic_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/it_report_day"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_day_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for today"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_day_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/it_report_month"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_month_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for month"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_month_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/it_report_year"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_year_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for year"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_year_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/basic_bottom"></include>
</LinearLayout>