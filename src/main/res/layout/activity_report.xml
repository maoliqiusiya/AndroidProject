<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray9"
    tools:context=".project.Report" >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="4dp"
            android:paddingRight="4dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_user_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="10dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="15dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:id="@+id/tv_user_head"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/iu"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingLeft="10dp"
                android:text="cyd"
                android:textColor="#151515"
                android:textSize="20dp"/>


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="52dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/it_report_day"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_day_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for today"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_day_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/it_report_month"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_month_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for month"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_month_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/it_report_year"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_report_year_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="report for year"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/it_report_year_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_file" />
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/tab_menu"
        android:gravity="bottom"
        android:layout_height="52dp"
        android:layout_marginTop="-52dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#EAE7E7"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:translationZ="8dp"
        tools:targetApi="lollipop">

        <RadioButton
            android:id="@+id/rbGroup"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/group"
            android:drawableTint="#878585"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="0dp"
            android:text="Group"
            android:textColor="#272626"
            android:textSize="12dp" />


        <RadioButton
            android:id="@+id/rbContact"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/contact"
            android:drawableTint="#878585"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="0dp"
            android:text="Contact"
            android:textColor="#272626"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rbSchedule"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:textSize="12dp"
            android:textColor="#272626"
            android:drawableTint="#878585"
            android:paddingTop="0dp"
            android:text="Schedule"
            />

        <RadioButton
            android:id="@+id/rbMe"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/me3"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="0dp"
            android:text="Me"
            android:textSize="12dp"
            android:textColor="#272626"
            android:drawableTint="#878585"
            />
    </RadioGroup>
</LinearLayout>