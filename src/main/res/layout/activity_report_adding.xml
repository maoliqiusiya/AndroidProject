<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.Me"
    android:orientation="vertical"
    android:background="@color/gray9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/report_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:background="@color/gray9">

            <hk.edu.cuhk.ie.iems5722.a2_1155164913.widget.RoundMeView
                android:id="@+id/report_title"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/padding_left_and_right"
                android:scaleType="centerCrop"
                android:src="@drawable/report"/>

            <TextView
                android:id="@+id/report_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="report for xxx"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/padding_left_and_right"/>
            <ImageView
                android:id="@+id/upload_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/upload_report" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item1_title"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray3"
                    android:textSize="13sp"
                    android:hint="Theme" />

                <EditText
                    android:id="@+id/item1_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="edit theme here"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:textColor="@color/gray0"
                    android:textSize="13sp" />

            </LinearLayout>






            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item2_title"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray3"
                    android:textSize="13sp"
                    android:hint="Finished work" />

                <EditText
                    android:id="@+id/item2_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="edit finished work"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:textColor="@color/gray0"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item3_title"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray3"
                    android:textSize="13sp"
                    android:hint="Current work" />

                <EditText
                    android:id="@+id/item3_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="edit current work"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:textColor="@color/gray0"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item4_title"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray3"
                    android:textSize="13sp"
                    android:hint="future work" />

                <EditText
                    android:id="@+id/item4_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="edit future work"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:textColor="@color/gray0"
                    android:textSize="13sp" />

            </LinearLayout>



    </LinearLayout>
    <include layout="@layout/basic_bottom"></include>
</LinearLayout>